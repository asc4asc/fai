#!/bin/bash
mkdir -p /home/${USER}/.config/autostart/
cat >/home/${USER}/.config/autostart/term.desktop <<"EOF"
[Desktop Entry]
Type=Application
# Exec=gnome-terminal 
# Exec=sudo gnome-terminal
Exec=gnome-terminal # -e /home/demo/fai.config/testme
Hidden=false
NoDisplay=false
X-GNOME-Autostart-enabled=true
Name[en_US]=term
Name=term
Comment[en_US]=
Comment=
X-GNOME-Autostart-Delay=0
EOF

cat >/home/${USER}/.config/autostart/term1.desktop <<"EOF"
[Desktop Entry]
Type=Application
# Exec=gnome-terminal
# Exec=sudo gnome-terminal
Exec=gnome-terminal -- /bin/sh -c 'bash -x faiserver.bash; sleep 10; exec bash'
Hidden=false
NoDisplay=false
X-GNOME-Autostart-enabled=true
Name[en_US]=term
Name=term
Comment[en_US]=
Comment=
X-GNOME-Autostart-Delay=0
EOF
